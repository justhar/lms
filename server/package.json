{
  "name": "server",
  "version": "0.0.1",
  "main": "dist/index.js",
  "packageManager": "bun@1.2.4",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --outfile=dist/index.js --platform=node --target=es2020 --format=esm --minify --external:path --external:os --external:crypto --external:fs --external:util --external:stream --external:events",
    "build:tsc": "tsc",
    "dev": "bun --watch run src/index.ts",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "hono": "^4.7.11",
    "postgres": "^3.4.7",
    "drizzle-orm": "^0.36.4",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "shared": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.7",
    "drizzle-kit": "^0.30.0",
    "typescript": "^5.0.0",
    "esbuild": "^0.19.0"
  }
}
